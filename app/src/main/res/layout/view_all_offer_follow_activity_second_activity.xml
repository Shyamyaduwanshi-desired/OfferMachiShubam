<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/banner_relative_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/store"/>
            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="130dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
               />
            <TextView
                android:id="@+id/btnfollow"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/view_background"
                android:text="Unfollow"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_alignBottom="@+id/viewPager"
                android:layout_toRightOf="@+id/SliderDots"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="80dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/storelogothumb"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/store"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="120dp"/>
    <LinearLayout
        android:id="@+id/lyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/storelogothumb"
        android:orientation="horizontal"
        android:layout_marginTop="179dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dominos Store"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/orange"/>
        </LinearLayout>
        <RatingBar
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:max="5"
            android:rating="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:theme="@style/MyRatingBar"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/storelogothumb"
        android:orientation="horizontal"
        android:layout_below="@+id/lyname"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLosed Now"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/darkred"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/timmer_id"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/black_watch"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storelogothumb">
        <TextView
            android:id="@+id/storedescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the"
            android:textSize="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/store_linear_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_id"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Offer from this store "
            android:textColor="@color/pink"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/categoryrecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/store_linear_id">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Related Store"
            android:textColor="@color/pink"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/storerecycleview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scrollbars="none">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>
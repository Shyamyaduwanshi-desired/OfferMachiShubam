<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageviewback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_left_arrow"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/shortlogo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notification_bell"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="110dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv">

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/simple_circle_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/brandfirst" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dominos"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6 days ago" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="23dp"
                                android:layout_marginLeft="130dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/view_background"
                                android:gravity="center"
                                android:text="Unfollow"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/store"
                                android:scaleType="fitXY"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Dominos Store"
                                android:textColor="@color/blue"
                                android:textSize="17dp" />

                            <View
                                android:layout_width="120dp"
                                android:layout_height="2dp"
                                android:background="@color/orange" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:text="Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the Lorem ipsum dolleer sit amet it is the dummy text only not is the"
                                android:textSize="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/green_background"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="14dp">
                            <TextView
                                android:id="@+id/viewalloffer_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="View All Offers"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="15dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Related Store"
                           android:textColor="@color/black"
                           android:layout_marginTop="10dp"
                           android:textSize="18dp"
                           android:layout_marginLeft="10dp"
                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center_horizontal"
                               android:layout_marginTop="20dp"
                               android:layout_marginLeft="5dp"
                               android:layout_marginBottom="50dp"
                               android:weightSum="3">
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="150dp"
                                   android:layout_weight="1"
                                   >
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       android:background="@drawable/category_background">
                                       <TextView
                                           android:layout_width="60dp"
                                           android:layout_height="20dp"
                                           android:layout_marginRight="10dp"
                                           android:layout_marginLeft="40dp"
                                           android:layout_marginTop="5dp"
                                           android:background="@drawable/view_background"
                                           android:text="Unfollow"
                                           android:gravity="center"
                                           android:textColor="@color/white"
                                           android:textSize="12dp" />

                                       <ImageView
                                           android:id="@+id/proimg"
                                           android:layout_width="80dp"
                                           android:layout_height="60dp"
                                           android:layout_gravity="center"
                                           android:layout_marginLeft="1dp"
                                           android:scaleType="centerCrop"
                                           android:src="@drawable/brandfirst" />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Dominos"
                                           android:layout_gravity="center"
                                           android:layout_marginTop="10dp"
                                           />
                                       <LinearLayout
                                           android:id="@+id/product_linear_unfollow_id"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:background="@drawable/view_offer_background"
                                           android:layout_marginTop="6dp">

                                           <TextView
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:text="View All Offers"
                                               android:textSize="10dp"
                                               android:gravity="center"
                                               android:textColor="@color/white"
                                               />
                                       </LinearLayout>
                                   </LinearLayout>
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="150dp"
                                   android:layout_weight="1"
                                   >
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       android:layout_marginLeft="5dp"
                                       android:background="@drawable/category_background">
                                       <TextView
                                           android:layout_width="60dp"
                                           android:layout_height="20dp"
                                           android:layout_marginRight="10dp"
                                           android:layout_marginLeft="40dp"
                                           android:layout_marginTop="5dp"
                                           android:background="@drawable/view_background"
                                           android:text="Unfollow"
                                           android:gravity="center"
                                           android:textColor="@color/white"
                                           android:textSize="12dp" />
                                       <ImageView
                                           android:layout_width="match_parent"
                                           android:layout_height="60dp"
                                           android:src="@drawable/kfclogo"
                                           android:layout_marginLeft="1dp"
                                           android:scaleType="centerCrop"
                                           android:layout_gravity="center"
                                           />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Kfc"
                                           android:layout_gravity="center"
                                           android:layout_marginTop="10dp"
                                           />
                                       <LinearLayout
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:background="@drawable/view_offer_background"
                                           android:layout_marginTop="5dp">

                                           <TextView
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:text="View All Offers"
                                               android:textSize="10dp"
                                               android:gravity="center"
                                               android:textColor="@color/white"
                                               />
                                       </LinearLayout>
                                   </LinearLayout>
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="150dp"
                                   android:layout_weight="1"
                                   android:layout_marginRight="5dp"
                                   android:layout_marginLeft="5dp"
                                   >
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       android:background="@drawable/category_background">
                                       <TextView
                                           android:layout_width="60dp"
                                           android:layout_height="20dp"
                                           android:layout_marginRight="10dp"
                                           android:layout_marginLeft="40dp"
                                           android:layout_marginTop="5dp"
                                           android:background="@drawable/view_background"
                                           android:text="Unfollow"
                                           android:gravity="center"
                                           android:textColor="@color/white"
                                           android:textSize="12dp" />
                                       <ImageView
                                           android:layout_width="match_parent"
                                           android:layout_height="60dp"
                                           android:src="@drawable/foodpanada"
                                           android:layout_marginLeft="1dp"
                                           android:layout_gravity="center"
                                           />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Foodpanda"
                                           android:layout_gravity="center"
                                           android:layout_marginTop="10dp"
                                           />
                                       <LinearLayout
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:background="@drawable/view_offer_background"
                                           android:layout_marginTop="5dp">

                                           <TextView
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:text="View All Offers"
                                               android:textSize="10dp"
                                               android:gravity="center"
                                               android:textColor="@color/white"
                                               />
                                       </LinearLayout>
                                   </LinearLayout>
                               </LinearLayout>
                           </LinearLayout>
                       </LinearLayout>
                   </LinearLayout>
        </LinearLayout>



























    </ScrollView>
</RelativeLayout>







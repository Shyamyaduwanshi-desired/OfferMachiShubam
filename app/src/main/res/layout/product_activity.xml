<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageviewback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_left_arrow"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
              />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/shortlogo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notification_bell"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="110dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flat"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50%"
                                android:textColor="@color/pink"
                                android:layout_marginLeft="5dp"
                                android:textSize="18dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Off"
                                android:textColor="@color/black"
                                android:layout_marginLeft="5dp"
                                android:textSize="18dp" />
                            <LinearLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:layout_marginLeft="200dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/simple_circle_background">
                                <ImageView
                                    android:id="@+id/heartfirst_image_id"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/heart"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">
                            <LinearLayout
                                android:id="@+id/shareicon_image_id"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:gravity="center"
                                android:layout_marginLeft="315dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/simple_circle_background">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/shareicon"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/viewPager_product"
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/myvegpizza"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dproductname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dominos Pizza"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dproddetailsname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Curabitur non nulla sit amet nisl temus convallis quis ac lectus.Donec rutrum congue leo eget malesuada. "
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/reviewstext_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Brand Name :"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Purchase Mode:"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:text="Takeaway"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/productprice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00AM -12:15PM"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day :"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allday"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date :"
                    android:textColor="@color/orange"
                    android:drawableLeft="@drawable/ic_clock_circular_outline"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 31,2019"
                    android:textColor="@color/orange"
                    android:drawablePadding="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/coupon_button_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/add_cart_button"
                android:text="View Code"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightcolour"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/simple_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/simple_circle_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/myvegpizza" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dominos"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6 days ago" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="19dp"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/view_background"
                                android:gravity="center"
                                android:text="Follow"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp">
                            <ImageView
                                android:layout_width="230dp"
                                android:layout_height="150dp"
                                android:src="@drawable/pizza"
                               android:scaleType="fitXY"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:id="@+id/product_name_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dominos"
                                android:textSize="17dp"
                                android:textColor="@color/blue"
                                android:layout_marginTop="10dp"/>
                            <View
                                android:layout_width="70dp"
                                android:layout_height="2dp"
                                android:background="@color/orange"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem ipsum dolleer sit amet it is the dummy text only not is the"
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/viewalloffer_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/view_offer_background"
                            android:layout_marginTop="7dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="View All Offers"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="17dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>







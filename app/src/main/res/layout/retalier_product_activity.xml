<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageviewback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_left_arrow"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/shortlogo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp" />
            <RelativeLayout
                android:layout_toRightOf="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp">
                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="27dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/btnnotification"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/ic_info"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/imgNotiBell"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/ic_notification_bell" />
                <TextView
                    android:id="@+id/txtMessageCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="6sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/offertypename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/viewPager_product"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/myvegpizza"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/offername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dominos Pizza"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/offerdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Curabitur non nulla sit amet nisl temus convallis quis ac lectus.Donec rutrum congue leo eget malesuada.Curabitur non nulla sit amet nisl temus convallis quis ac lectus.Donec rutrum congue leo eget malesuada. "
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/reviewstext_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Brand Name :"
                        android:layout_weight="1.9"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="19dp" />
                    <TextView
                        android:id="@+id/brandname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textSize="19dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Locations :"
                    android:layout_weight=".6"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
                <TextView
                    android:id="@+id/storeLocations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textColor="@color/blue"
                    android:textSize="19dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/productprice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="19dp"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00AM -12:15PM"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="1dp"
                        android:textSize="19dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date :"
                    android:textColor="@color/orange"
                    android:drawableLeft="@drawable/ic_clock_circular_outline"
                    android:drawablePadding="5dp"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 31,2019"
                    android:textColor="@color/orange"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="19dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/coupon_button_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/add_cart_button"
                android:text="View Code"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/coupon_delete_button_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/delate_button"
                android:text="Delete"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/coupon_edit_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/delate_button"
                android:text="Edit"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>







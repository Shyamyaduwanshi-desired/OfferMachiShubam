<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="10dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/simple_background">
            <TextView
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="follow"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/view_background" />
            <ImageView
                android:id="@+id/productimage_id"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/brandfirst"/>
            <TextView
                android:id="@+id/product_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="Dominoz Pizza"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/product_linear_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/view_offer_background"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sell All Couponn"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
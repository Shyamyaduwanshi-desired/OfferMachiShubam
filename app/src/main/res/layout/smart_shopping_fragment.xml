<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_above="@+id/bt_proceed"
    >
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cv"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/splash">
                            <ImageView
                                android:id="@+id/imageback"
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_left_arrow"/>
                            <TextView
                                android:id="@+id/logo"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="@string/smartshopping"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:textStyle="bold"
                                android:gravity="center"/>
                            <ImageView
                                android:id="@+id/imgNotiBell"
                                android:layout_width="39dp"
                                android:layout_height="35dp"
                                android:padding="5dp"
                                android:layout_marginLeft="310dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_notification_bell" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/smartswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchMinWidth="50dp"
                    android:layout_gravity="right"
                    android:text="Smart Shopping  "
                    android:padding="10dp"
                    android:textOff="OFF"
                    android:textOn="ON"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your category you are intersted in?"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/category_recycler_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_above="@+id/rl">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/bt_proceed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_button_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:text="Proceed"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white" />
    <!--for showing bottom view at home screen-->
</RelativeLayout>
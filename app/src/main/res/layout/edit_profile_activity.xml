<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/splash">
                        <ImageView
                            android:id="@+id/imageback"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_left_arrow"/>
                        <TextView
                            android:id="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="My Profile"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/info_id"
                                android:layout_width="27dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_toLeftOf="@+id/btnnotification"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_info"
                                tools:ignore="VectorDrawableCompat" />
                            <ImageView
                                android:id="@+id/btnnotification"
                                android:layout_width="29dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_notification_bell"
                                tools:ignore="VectorDrawableCompat" />

                            <TextView
                                android:id="@+id/txtMessageCount"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="6sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"/>

                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/editprofiletoprelative_id"
                    android:background="@drawable/profilebg"
                    android:layout_below="@+id/cv">
                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/imgProfileAvatar"
                            android:src="@drawable/profile_user"
                            android:foregroundGravity="center"
                            />
                        <LinearLayout
                            android:id="@+id/imagepicker"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/simple_circle_background">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/ic_photo_camera"/>
                        </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/edittext_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewrelative_id"
                    android:layout_marginVertical="40dp">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/phoneborder"
                        android:hint="Name"
                        android:imeOptions="actionGo"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple" />
                    <EditText
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:editable="false"
                        android:background="@drawable/phoneborder"
                        android:hint="Gender"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple"  />

                    <LinearLayout
                        android:id="@+id/linear_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/gender"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lymale"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:background="@drawable/signinsignup">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="16dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/maleuser" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:paddingLeft="7dp"
                                android:layout_marginTop="6dp"
                                android:text="MALE"
                                android:textColor="#fff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyfemale"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:background="@drawable/signupbutton">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="16dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/female_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:paddingLeft="7dp"
                                android:text="FEMALE"
                                android:layout_marginTop="6dp"
                                android:textColor="#fff" />
                        </LinearLayout>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/linear_id"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/phoneborder"
                        android:hint="Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple"
                        android:layout_marginTop="20dp"
                        />
                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/email"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/phoneborder"
                        android:hint="Mobile Number "
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/dateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/mobile"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/phoneborder"
                        android:hint="DOB"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple"
                        android:layout_marginTop="20dp"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/dateofbirth"
                        android:layout_marginVertical="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:background="@drawable/phoneborder"
                        android:hint="Address"
                        android:paddingLeft="30dp"
                        android:textColor="@color/purple" />
                     <TextView
                         android:id="@+id/changepassword_id"
                         android:layout_below="@+id/address"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Change Password"
                         android:textColor="@color/green"
                         android:layout_marginLeft="220dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:layout_below="@+id/edittext_id">
                    <Button
                        android:id="@+id/btnsave"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/login_button_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Save"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
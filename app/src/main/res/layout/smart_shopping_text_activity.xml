<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/smartshopping"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_toRightOf="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="60dp">
                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="27dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/btnnotification"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_info"
                    tools:ignore="VectorDrawableCompat"/>
                <ImageView
                    android:id="@+id/imgNotiBell"
                    android:layout_width="29dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_notification_bell"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:weightSum="2">
        <TextView
            android:id="@+id/filter_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:background="@drawable/filter_background"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Filter"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white">
        </View>
        <TextView
            android:id="@+id/sortby_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/filter_background"
            android:text="Sort By"/>
    </LinearLayout>
    <TextView
        android:id="@+id/clearall"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="Clear All"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@drawable/view_background" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/categoryrecycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/rl"/>
</LinearLayout>
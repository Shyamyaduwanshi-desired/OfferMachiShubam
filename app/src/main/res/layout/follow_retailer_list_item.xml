<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_background">
            <TextView
                android:id="@+id/btnfollow"
                android:layout_width="70dp"
                android:layout_height="19dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/view_background"
                android:gravity="center"
                android:text="Follow"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/simple_circle_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/storelogothumb"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/myvegpizza" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dominos"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/storeimage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/myvegpizza"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/storename2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dominos"
                android:textSize="17dp"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:background="@color/orange"/>

            <TextView
                android:id="@+id/storedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolleer sit amet it is the dummy text only not is the"
                android:textSize="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewalloffer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_offer_background"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/btnviewall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Offers"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="17dp"/>
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
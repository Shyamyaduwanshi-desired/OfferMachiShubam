<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Followers"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:id="@+id/selected_spiner_id"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/select_text_id"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Select"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
            <View
                android:id="@+id/view_id"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightcolour"/>

            <ImageView
                android:id="@+id/downarrow_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/downarrow"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/name_hide_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/simple_background">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select All"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightcolour"
                android:layout_marginTop="5dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/name_first_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rini"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        />
                    <CheckBox
                        android:id="@+id/name_second_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surbhi"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        />
                    <CheckBox
                        android:id="@+id/name_third_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ragini"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        />
                    <CheckBox
                        android:id="@+id/name_forth_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ankit"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        />
                    <CheckBox
                        android:id="@+id/name_fifth_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mustfa"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        />
                    <CheckBox
                        android:id="@+id/name_six_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dharmendra"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="19dp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <Button
            android:visibility="visible"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/add_cart_button"
            android:text="Send Offer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>
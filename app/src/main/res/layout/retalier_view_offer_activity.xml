<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/offertypename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textAllCaps="true"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:id="@+id/product_image_id"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/myvegpizza"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/pushname_product_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOMINOZ PIZZA"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/orange"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_date_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jul 31,2019"
                        android:textColor="@color/orange"
                        android:drawableLeft="@drawable/ic_clock_circular_outline"
                        android:drawablePadding="5dp"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

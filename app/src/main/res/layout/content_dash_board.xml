<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_second"
    tools:showIn="@layout/app_bar_dash_board">

    <FrameLayout
        android:id="@+id/screenarea"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="0dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_id"
        android:layout_width="match_parent"
        android:layout_height="670dp" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/bottomly"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/bottomly"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:id="@+id/homelinear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/onlineshop"/>
                <TextView
                    android:id="@+id/hometext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:paddingTop="5dp"
                    android:text="Smart Shopping"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_linear_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/categoryimg_id"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/deals"/>
                <TextView
                    android:id="@+id/categorytext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="Deals of the Day"
                    android:paddingTop="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_linear_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/account_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/coupon" />

                <TextView
                    android:id="@+id/accountext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="MY Coupons"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/cart_linear_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="10dp"

                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cart_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/favorite"/>
                <TextView
                    android:id="@+id/carttext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="Favourites"
                    android:paddingTop="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/more_linear_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/more_img"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/follow"/>
                <TextView
                    android:id="@+id/moretext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="iFollow"
                    android:paddingTop="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
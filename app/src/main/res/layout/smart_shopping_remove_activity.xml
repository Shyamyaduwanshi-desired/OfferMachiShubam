<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:id="@+id/offertype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:id="@+id/heart_image_id"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/heart"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/product_image_id"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/myvegpizza"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOMINOZ PIZZA"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:ellipsize="end"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 31,2019"
                    android:textColor="@color/orange"
                    android:drawableLeft="@drawable/ic_clock_circular_outline"
                    android:drawablePadding="5dp"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/product_share_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_share"
                    android:drawablePadding="2dp"
                    android:text="Share"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
            </LinearLayout>
            <Button
                android:id="@+id/product_button_id"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/add_cart_button"
                android:text="Get Coupon Code"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/remove_button_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/smart_shopping_background"
                android:text="Remove"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>

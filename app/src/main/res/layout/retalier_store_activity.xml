<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/shopicon"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/store_name_edt_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Store Name"
                        android:drawablePadding="20dp"
                        android:backgroundTint="#fff"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:textColor="@color/purple"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/mobile"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/store_contact_edt_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Store Contact Number"
                        android:drawablePadding="20dp"
                        android:backgroundTint="#fff"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textColor="@color/purple"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/locationicon"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/store_address_edt_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Store Address"
                        android:drawablePadding="20dp"
                        android:backgroundTint="#fff"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:textColor="@color/purple" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:weightSum="2"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_background"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="38dp"
                            android:background="@drawable/circle_background"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="23dp"
                                android:src="@drawable/addressicon"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/city_edt_id"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:textSize="18dp"
                            android:hint="City"
                            android:paddingLeft="25dp"
                            android:drawablePadding="10dp"
                            android:paddingTop="3dp"
                            android:backgroundTint="@color/white"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/purple"/>
                        <!--<Spinner-->
                            <!--android:layout_width="30dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginRight="10dp"-->
                            <!--android:layout_gravity="center">-->
                        <!--</Spinner>-->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/store_image_id"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/store_image_background">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Store Image"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours :"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open Close"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/days_edt_id"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_background"
                            android:paddingLeft="15dp"
                            android:layout_marginLeft="10dp"
                            android:hint="Days"
                            android:inputType="textCapSentences"/>
                        <EditText
                            android:id="@+id/time_view_start"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="20:00"
                            android:layout_weight="0.4"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="5dp"
                            android:editable="false"
                            android:background="@drawable/edit_background"/>

                        <EditText
                            android:id="@+id/time_view_end"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:text="20:00"
                            android:paddingLeft="10dp"
                            android:layout_weight="0.4"
                            android:editable="false"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/edit_background"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:src="@drawable/plus"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/content_background">
                        <EditText
                            android:id="@+id/about_store_name_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="About Store"
                            android:backgroundTint="@color/white"
                            android:textSize="19dp"
                            android:paddingLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:imeOptions="actionNext"
                            android:textColor="@color/purple"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/registerbutton_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/login_button_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"
                        android:text="Register"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
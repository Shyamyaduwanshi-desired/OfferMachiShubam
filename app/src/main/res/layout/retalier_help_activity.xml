<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Help"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imgNotiBell"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_notification_bell" />
            <TextView
                android:id="@+id/txtMessageCount"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNotiBell"
                app:layout_constraintTop_toTopOf="@+id/imgNotiBell"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="8dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/cv"
                android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/firstskip_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="If you have any Query .Please contact us:"
                            android:textColor="#000"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call Us -"
                                android:textColor="#000"
                                android:drawablePadding="11dp"/>

                            <TextView
                                android:id="@+id/phonenumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0123456789"
                                android:textColor="@color/purple"
                                android:paddingLeft="10dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mail Us -"
                                android:drawablePadding="10dp"
                                android:textColor="#000" />
                            <TextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="info@offermachi.com"
                                android:textColor="@color/purple"
                                android:paddingLeft="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FAQ &apos;s"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/purple"
                                android:textSize="20dp"/>

            </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/liveshiplist"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>

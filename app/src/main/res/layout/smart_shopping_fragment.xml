<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cv"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/splash">
                            <ImageView
                                android:id="@+id/imageback"
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_left_arrow"/>
                            <TextView
                                android:id="@+id/logo"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="@string/smartshopping"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:textStyle="bold"
                                android:gravity="center"/>
                            <ImageView
                                android:id="@+id/imgNotiBell"
                                android:layout_width="39dp"
                                android:layout_height="35dp"
                                android:padding="5dp"
                                android:layout_marginLeft="310dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_notification_bell" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your category you are intersted in?"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="8dp"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/electronics_linear_id"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/electronics" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Electronics"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/category_background">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:src="@drawable/men"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Men"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/hairstyle" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Women"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="8dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:src="@drawable/kids"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baby &amp; Kids"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:src="@drawable/furniture"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home &amp; Furnitutre"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textSize="13dp"
                                android:layout_marginTop="8dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">


                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/fastfood" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="100dp"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:src="@drawable/pharmacy"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pharmacy"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:src="@drawable/beauty"
                                android:layout_marginLeft="1dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beauty"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_background">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:src="@drawable/car"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Car"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            </LinearLayout>
        </ScrollView>

</LinearLayout>
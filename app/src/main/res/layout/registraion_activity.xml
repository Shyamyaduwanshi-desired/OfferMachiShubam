<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/splash">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:src="@drawable/logooffermachi"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#fff"
            android:layout_margin="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/register_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="41dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/mobile"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/etmobile"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:hint="Mobile"
                        android:drawablePadding="20dp"
                        android:backgroundTint="#fff"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/purple"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="41dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/password"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/etpassword"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:hint="Password"
                        android:drawablePadding="20dp"
                        android:backgroundTint="#fff"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/purple"
                        />
                </LinearLayout>

                <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:background="@drawable/edit_background"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--android:hint="Mobile"-->
                    <!--android:drawablePadding="20dp"-->
                    <!--android:drawableLeft="@drawable/ic_phone_outline_in_a_circle"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="20dp">
                    <CheckBox
                        android:id="@+id/terms_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I accept the"
                        android:textColor="@color/darkgray"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="terms and conditions"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/purple"
                        android:textSize="16dp"
                        android:layout_marginTop="1dp"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/register_button_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/login_button_background"
                    android:layout_marginLeft="@dimen/margin_save_button"
                    android:layout_marginRight="@dimen/margin_save_button"
                    android:layout_marginTop="30dp"
                    android:text="REGISTER"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account ?"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/login_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/purple"/>
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="@android:color/transparent"

        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:id="@+id/cv_main"
        >
       <!--
          android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
       app:cardBackgroundColor="@android:color/white"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            >
        <RelativeLayout
            android:id="@+id/rl_topview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
           >
            <!--android:background="@drawable/simple_background"-->
            <LinearLayout
            android:id="@+id/ly_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/simple_background">

          <!--  <ImageView
                android:id="@+id/storeimage"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/brandfirst"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>-->
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="4dp"
                    android:layout_centerVertical="true"
                    app:cardElevation="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="1dp"
                    >
                    <ImageView
                        android:id="@+id/storeimage"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"

                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"/>
                   <!-- <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/electronics" />-->
                </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="15"
                android:text="Dominoz Pizza"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>




            </LinearLayout>

        </RelativeLayout>
            <TextView
                android:id="@+id/btnviewall"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="View All Offers"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/view_offer_background"
                android:textColor="@color/white"
                android:layout_marginTop="-4dp"
                android:layout_below="@+id/rl_topview"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/btnfollow"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:text="follow"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
       android:layout_below="@+id/cv_main"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/view_background" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/mycoupons"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:gravity="center"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="320dp"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:id="@+id/productlinear_id"
                            android:layout_width="165dp"
                            android:layout_height="320dp"
                            android:orientation="vertical"
                            android:background="@drawable/content_background"
                            android:layout_marginLeft="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="0dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flat"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="2dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50%"
                                    android:textColor="@color/pink"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="18dp"
                                    android:layout_marginTop="2dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Off"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="18dp"
                                    android:layout_marginTop="2dp"/>
                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/simple_circle_background">
                                    <ImageView
                                        android:id="@+id/heart_image_id"
                                        android:layout_width="20dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/heart"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:src="@drawable/myvegpizza"
                                    />
                                <TextView
                                    android:id="@+id/textname_first_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DOMINOZ PIZZA"
                                    android:textSize="17dp"
                                    android:textColor="@color/blue"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="130dp"
                                    android:layout_height="2dp"
                                    android:background="@color/orange"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jul 31,2019"
                                        android:textColor="@color/orange"
                                        android:drawableLeft="@drawable/ic_clock_circular_outline"
                                        android:drawablePadding="5dp"
                                        android:textSize="12dp"/>

                                    <TextView
                                        android:id="@+id/share_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:drawableLeft="@drawable/ic_share"
                                        android:drawablePadding="2dp"
                                        android:text="Share"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:textSize="12dp" />
                                </LinearLayout>
                                <Button
                                    android:id="@+id/viewcode_button_id"
                                    android:layout_width="150dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/add_cart_button"
                                    android:text="View Code"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="320dp"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:id="@+id/productlinearsecond_id"
                            android:layout_width="165dp"
                            android:layout_height="320dp"
                            android:orientation="vertical"
                            android:background="@drawable/content_background"
                            android:layout_marginLeft="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="0dp">
                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="130dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/simple_circle_background">
                                    <ImageView
                                        android:id="@+id/heart_imagesecond_id"
                                        android:layout_width="20dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/heart"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:src="@drawable/productfirst"
                                    />
                                <TextView
                                    android:id="@+id/textname_second_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DOMINOZ PIZZA"
                                    android:textSize="17dp"
                                    android:textColor="@color/blue"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="130dp"
                                    android:layout_height="2dp"
                                    android:background="@color/orange"/>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jul 31,2019"
                                        android:textColor="@color/orange"
                                        android:drawableLeft="@drawable/ic_clock_circular_outline"
                                        android:drawablePadding="5dp"
                                        android:textSize="12dp"/>
                                    <TextView
                                        android:id="@+id/sharesecond"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Share"
                                        android:layout_marginLeft="5dp"
                                        android:textAlignment="center"
                                        android:drawableLeft="@drawable/ic_share"
                                        android:drawablePadding="2dp"
                                        android:textSize="12dp"
                                        android:textColor="@color/blue"/>
                                </LinearLayout>
                                <Button
                                    android:id="@+id/viewcode_buttonfirst_id"
                                    android:layout_width="150dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/add_cart_button"
                                    android:text="View Code"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="320dp"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:id="@+id/productlinearthird_id"
                            android:layout_width="165dp"
                            android:layout_height="320dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/content_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="130dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/simple_circle_background">

                                    <ImageView
                                        android:id="@+id/heart_imagethird_id"
                                        android:layout_width="20dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/heart" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:src="@drawable/productsecond" />

                                <TextView
                                    android:id="@+id/textname_third_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="DOMINOZ PIZZA"
                                    android:textColor="@color/blue"
                                    android:textSize="17dp" />

                                <View
                                    android:layout_width="130dp"
                                    android:layout_height="2dp"
                                    android:background="@color/orange" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_clock_circular_outline"
                                        android:drawablePadding="5dp"
                                        android:text="Jul 31,2019"
                                        android:textColor="@color/orange"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/share_third"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:drawableLeft="@drawable/ic_share"
                                        android:drawablePadding="2dp"
                                        android:text="Share"
                                        android:textAlignment="center"
                                        android:textColor="@color/blue"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/viewcode_buttonsecond_id"
                                    android:layout_width="150dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/add_cart_button"
                                    android:text="View Code"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="320dp"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:id="@+id/productlinearforth_id"
                                android:layout_width="165dp"
                                android:layout_height="320dp"
                                android:orientation="vertical"
                                android:background="@drawable/content_background"
                                android:layout_marginLeft="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="0dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Flat"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="2dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50%"
                                        android:textColor="@color/pink"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="18dp"
                                        android:layout_marginTop="2dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Off"
                                        android:textColor="@color/black"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="18dp"
                                        android:layout_marginTop="2dp"/>
                                    <LinearLayout
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:gravity="center"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/simple_circle_background">
                                        <ImageView
                                            android:id="@+id/heart_imageforth_id"
                                            android:layout_width="20dp"
                                            android:layout_height="18dp"
                                            android:src="@drawable/heart"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="170dp"
                                        android:src="@drawable/catseven"
                                        />
                                    <TextView
                                        android:id="@+id/textname_forth_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DOMINOZ PIZZA"
                                        android:textSize="17dp"
                                        android:textColor="@color/blue"
                                        android:layout_marginTop="10dp"/>
                                    <View
                                        android:layout_width="130dp"
                                        android:layout_height="2dp"
                                        android:background="@color/orange"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="2"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Jul 31,2019"
                                            android:textColor="@color/orange"
                                            android:drawableLeft="@drawable/ic_clock_circular_outline"
                                            android:drawablePadding="5dp"
                                            android:textSize="12dp"/>
                                        <TextView
                                            android:id="@+id/share_forth"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Share"
                                            android:layout_marginLeft="5dp"
                                            android:textAlignment="center"
                                            android:drawableLeft="@drawable/ic_share"
                                            android:drawablePadding="2dp"
                                            android:textSize="12dp"
                                            android:textColor="@color/blue"/>
                                    </LinearLayout>
                                    <Button
                                        android:id="@+id/viewcode_buttonthird_id"
                                        android:layout_width="150dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="15dp"
                                        android:background="@drawable/add_cart_button"
                                        android:text="View Code"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/filter_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:background="@drawable/filter_background"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Filter"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white">
        </View>
        <TextView
            android:id="@+id/sortby_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/filter_background"
            android:text="Sort By"/>
    </LinearLayout>
</RelativeLayout>
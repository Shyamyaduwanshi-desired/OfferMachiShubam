<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/customer"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/imgNotiBell"
                android:layout_width="39dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_notification_bell" />
            <TextView
                android:id="@+id/txtMessageCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNotiBell"
                app:layout_constraintTop_toTopOf="@+id/imgNotiBell"
                tools:ignore="SmallSp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/clickeventlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Your query here"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:id="@+id/mobilecategory_linear_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Enter your name"
                android:drawablePadding="20dp"
                android:backgroundTint="#fff"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:layout_marginTop="2dp"
                android:textColor="@color/purple"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/email"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Enter your email"
                android:drawablePadding="20dp"
                android:backgroundTint="#fff"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:layout_marginTop="2dp"
                android:textColor="@color/purple"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/simple_background"
            android:hint="Your Request..."
            android:textColor="#013893"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/submit_customer_button_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_button_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
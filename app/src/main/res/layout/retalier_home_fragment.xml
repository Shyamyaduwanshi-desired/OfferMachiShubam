<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Offer &amp; Discount"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/firstcircle_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/simple_circle_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </LinearLayout>
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/simple_circle_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="#fff"
                android:layout_margin="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/firsthome_linear_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Type"
                                        android:textSize="18dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:textColor="@color/black" />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="20dp">
                                        <LinearLayout
                                            android:id="@+id/select_type_linear_hide_id"
                                            android:layout_width="190dp"
                                            android:layout_height="40dp"
                                            android:layout_marginLeft="80dp"
                                            android:gravity="center"
                                            android:background="@drawable/edit_background">
                                            <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:hint="Select Type"
                                                android:backgroundTint="@color/white"
                                               />
                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:src="@drawable/downarrow"
                                                android:layout_marginLeft="35dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_gravity="center"/>
                                        </LinearLayout>
                                        <!--<LinearLayout-->
                                            <!--android:id="@+id/select_typehide_linear_id"-->
                                            <!--android:layout_width="170dp"-->
                                            <!--android:layout_height="80dp"-->
                                            <!--android:background="@drawable/hide_background"-->
                                            <!--android:layout_marginLeft="90dp"-->
                                            <!--android:visibility="gone"-->
                                            <!--android:orientation="vertical">-->
                                            <!--<TextView-->
                                                <!--android:layout_width="match_parent"-->
                                                <!--android:layout_height="wrap_content"-->
                                                <!--android:text="Fixed Price"-->
                                                <!--android:layout_marginLeft="10dp"-->
                                                <!--android:textSize="20dp"-->
                                                <!--/>-->
                                            <!--<TextView-->
                                                <!--android:layout_width="match_parent"-->
                                                <!--android:layout_height="wrap_content"-->
                                                <!--android:text="Percentage"-->
                                                <!--android:layout_marginLeft="10dp"-->
                                                <!--android:textSize="20dp"-->
                                                <!--android:layout_marginTop="10dp"-->
                                                <!--/>-->
                                        <!--</LinearLayout>-->
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Value"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black" />
                                <LinearLayout
                                    android:layout_width="190dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="73dp"
                                    android:background="@drawable/edit_background">
                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:hint="Select Type"
                                        android:backgroundTint="@color/white"
                                        android:paddingLeft="20dp"
                                        android:layout_marginLeft="10dp"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="@color/lightcolour"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="10dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="%"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="30dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Offers &amp; Discount Image"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:background="@drawable/home_offer_background">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/ic_photo_cam"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Image"
                                        android:gravity="center"
                                        android:textSize="18dp"
                                        android:imeOptions="actionNext"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black" />
                                <LinearLayout
                                    android:layout_width="170dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="30dp"
                                    android:background="@drawable/edit_background">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/downarrow"
                                        android:layout_marginLeft="120dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/plus"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Offers Details"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/simple_background">
                            </LinearLayout>
                            <Button
                                android:id="@+id/next_button_id"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/login_button_background"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="100dp"
                                android:text="Next"
                                android:textSize="20dp"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/second_home_linear_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Expiry Date"
                                        android:textSize="18dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:textColor="@color/black" />
                                    <LinearLayout
                                        android:layout_width="150dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="60dp"
                                        android:background="@drawable/edit_background">
                                        <EditText
                                            android:id="@+id/editexpirydate"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:backgroundTint="@color/white"
                                            android:paddingLeft="10dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:hint="Enter Date" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Status"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/black"/>
                                <Switch
                                    android:id="@+id/simpleSwitch"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="180dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp">
                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="30dp"
                                    android:text="Generate Coupon Code"
                                    android:background="@drawable/view_background"
                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="7dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white" />
                                <LinearLayout
                                    android:layout_width="140dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/edit_background">
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:textAlignment="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:backgroundTint="@color/white"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="70dp"
                                   >

                                    <EditText
                                        android:id="@+id/time_view_start"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="20:00"
                                        android:layout_weight="0.3"
                                        android:paddingLeft="30dp"
                                        android:editable="false"
                                        android:background="@drawable/edit_background"/>

                                    <EditText
                                        android:id="@+id/time_view_end"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="20:00"
                                        android:paddingLeft="30dp"
                                        android:layout_weight="0.3"
                                        android:editable="false"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/edit_background"/>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black" />
                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="130dp"
                                    android:background="@drawable/edit_background">
                                    <EditText
                                        android:id="@+id/editText1"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:backgroundTint="@color/white"
                                        android:paddingLeft="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="14dp"
                                        android:hint="Enter Date" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="30dp">
                                <Button
                                    android:id="@+id/submit_button_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/login_button_background"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="100dp"
                                    android:text="Submit"
                                    android:textSize="20dp"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_left_arrow"/>
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Help"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <RelativeLayout
                android:layout_toRightOf="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="80dp">
                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="27dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/btnnotification"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/ic_info"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/imgNotiBell"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/ic_notification_bell" />
                <TextView
                    android:id="@+id/txtMessageCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="6sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/viewline_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/lightcolour"
        android:layout_below="@+id/cv"/>

    <RelativeLayout
        android:id="@+id/faq_relative_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewline_id">
        <LinearLayout
            android:id="@+id/faq_linear_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="FAQs"-->
            <!--                android:gravity="center"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:textSize="20dp"/>-->
            <!--            <View-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:background="@color/lightcolour"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:layout_marginTop="10dp"/>-->

        </LinearLayout>
        <TextView
            android:id="@+id/top_queries_text_id"
            android:layout_below="@+id/faq_linear_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Queries"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_marginTop="1dp"/>
        <View
            android:id="@+id/view_id"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/lightcolour"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/top_queries_text_id"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/liveshiplist"
            android:layout_width="match_parent"
            android:layout_margin="13dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_id">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>

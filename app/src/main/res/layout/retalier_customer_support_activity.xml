        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:background="@drawable/circle_background"
                android:layout_marginLeft="1dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:hint="Enter your name"
                android:singleLine="true"
                android:maxLength="30"
                android:backgroundTint="#fff"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:textColor="@color/purple"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:background="@drawable/circle_background"
                android:layout_marginLeft="1dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/email"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:hint="Enter your email"
                android:backgroundTint="#fff"
                android:singleLine="true"
                android:maxLength="30"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:textColor="@color/purple"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mobilecategory_linear_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:background="@drawable/circle_background"
                android:layout_marginLeft="1dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mobile"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etmobile"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:hint="Mobile"
                android:singleLine="true"
                android:maxLength="15"
                android:backgroundTint="#fff"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textColor="@color/purple"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/etmessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/simple_background"
            android:hint="Your Request..."
            android:textColor="#013893"
            android:maxLength="150"
            android:padding="10dp"
            android:gravity="center_vertical|top"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/submit_customer_button_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_button_background"
            android:layout_marginLeft="@dimen/margin_save_button"
            android:layout_marginRight="@dimen/margin_save_button"
            android:layout_marginTop="30dp"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
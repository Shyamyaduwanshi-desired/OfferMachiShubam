<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashBoardActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolbar"
            android:background="@drawable/splash"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/shortlogo"
                        android:layout_marginLeft="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:src="@drawable/shortlogo"
                            android:layout_marginLeft="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp" />

                        <ImageView
                            android:id="@+id/info_id"
                            android:layout_width="27dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/btnnotification"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_info"
                            tools:ignore="VectorDrawableCompat"
                            android:layout_toRightOf="@+id/logo"
                            android:layout_marginLeft="150dp"
                            />


                        <ImageView
                            android:id="@+id/imgNotiBell"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_notification_bell"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_toRightOf="@+id/info_id"
                            tools:ignore="VectorDrawableCompat" />



                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_retalier_dashboard" />


</android.support.design.widget.CoordinatorLayout>
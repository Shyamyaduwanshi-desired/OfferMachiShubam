<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools">

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="400dp"
       android:orientation="vertical"
       android:layout_marginTop="30dp"
       android:background="@color/white">

       <TextView
           android:id="@+id/code_text_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="QR Code"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:textSize="20dp"
           android:textColor="@color/black"/>

          <ImageView
              android:id="@+id/qr_code_img_id"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:src="@drawable/ic_blackberry_qr_code_variant"/>
         <LinearLayout
             android:id="@+id/or_linear_id"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_marginTop="20dp">
             <View
                   android:layout_width="120dp"
                   android:layout_height="0.7dp"
                   android:background="@color/lightcolour" />
                    <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="OR"
                     android:textColor="@color/purple"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                     />
                 <View
                 android:layout_width="120dp"
                 android:layout_height="0.7dp"
                 android:background="@color/lightcolour"/>

          </LinearLayout>
       <TextView
           android:id="@+id/couponcode_text_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Coupon Code"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:textSize="20dp"
           android:textColor="@color/black" />
       <Button
           android:id="@+id/coupon_button_apply_id"
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:background="@drawable/coupon_code_background"
           android:layout_marginTop="10dp"
           android:text="AMADAAG3Ra2Y"
           android:textColor="@color/white"
           android:textSize="19dp"
           android:layout_gravity="center"
           android:layout_marginLeft="60dp"
           android:layout_marginRight="60dp"
           />
       <TextView
           android:id="@+id/coupon_ok_id"
           android:layout_width="70dp"
           android:layout_height="23dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/view_background"
           android:gravity="center"
           android:text="OK"
           android:textColor="@color/white"
           android:textSize="15dp"
           android:layout_gravity="center"/>

   </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="4dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">
        <!--
           android:layout_marginRight="5dp"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
        app:cardBackgroundColor="@android:color/white"-->

        <RelativeLayout
            android:id="@+id/rl_topview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_background">
            <!--android:background="@drawable/simple_background"-->
            <LinearLayout
                android:id="@+id/ly_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/simple_background">

                <!--  <ImageView
                      android:id="@+id/storeimage"
                      android:layout_width="130dp"
                      android:layout_height="90dp"
                      android:padding="5dp"
                      android:layout_marginTop="5dp"
                      android:src="@drawable/brandfirst"
                      android:scaleType="fitCenter"
                      android:layout_gravity="center"/>-->


                    <ImageView
                        android:id="@+id/storeimage"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/logooffermachi"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>
                    <!-- <ImageView
                         android:id="@+id/iv_image"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         android:scaleType="centerCrop"
                         android:adjustViewBounds="true"
                         android:layout_centerVertical="true"
                         android:src="@drawable/electronics" />-->


                <TextView
                    android:id="@+id/storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:text="Dominoz Pizza"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btnviewall"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/cv_main"
        android:layout_marginTop="-4dp"
        android:background="@drawable/view_offer_background"
        android:gravity="center"
        android:text="View All Offers"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/btnfollow"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_below="@+id/btnviewall"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:text="follow"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>
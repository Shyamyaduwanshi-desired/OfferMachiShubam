<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/splash">
                        <ImageView
                            android:id="@+id/imageback"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_left_arrow"/>
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:src="@drawable/shortlogo"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_toRightOf="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="40dp">
                            <ImageView
                                android:id="@+id/info_id"
                                android:layout_width="27dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="70dp"
                                tools:srcCompat="@drawable/ic_info"
                                android:layout_alignParentRight="true"
                                />
                            <ImageView
                                android:id="@+id/imgNotiBell"
                                android:layout_width="29dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="35dp"
                                android:layout_alignParentRight="true"
                                tools:srcCompat="@drawable/ic_filter"
                                />
                            <ImageView
                                android:id="@+id/btnnotification"
                                android:layout_width="29dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_notification_bell"
                                tools2:ignore="VectorDrawableCompat" />

                            <TextView
                                android:id="@+id/txtMessageCount"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="6sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"/>

                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/bt_proceed"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/category_recycler_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                >
            </android.support.v7.widget.RecyclerView>
         <!--   <Button
                android:id="@+id/product_button_id"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/add_cart_button"
                android:text="Ok"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textAllCaps="false"/>-->
        </LinearLayout>
        <Button
            android:id="@+id/bt_proceed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_button_background"
          android:layout_margin="10dp"
            android:text="Proceed"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"

            />
    </RelativeLayout>

          </LinearLayout>
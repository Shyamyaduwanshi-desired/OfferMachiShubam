<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash">
            <ImageView
                android:id="@+id/imageviewback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_left_arrow"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/shortlogo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp" />
            <RelativeLayout
                android:layout_toRightOf="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="60dp">

                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_info"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/imgNotiBell"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/ic_notification_bell"
                     />
                <TextView
                    android:id="@+id/txtMessageCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="6sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>
          <!--  <TextView
                android:id="@+id/txtMessageCount"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintEnd_toEndOf="@+id/imgNotiBell"
                app:layout_constraintTop_toTopOf="@+id/imgNotiBell"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="8dp"/>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/offertypename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/heartfirst_image_id"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/heart"/>

                    <ImageView
                        android:id="@+id/imgshare"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/heartfirst_image_id"
                        android:src="@drawable/shareicon"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"/>



                        <ImageView
                            android:id="@+id/viewPager_product"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/offertypename"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/logooffermachi"/>



            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/offername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/offerdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/reviewstext_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Brand Name :"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/brandname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:textColor="@color/blue"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Purchase Mode:"
                        android:layout_weight="1.2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:layout_marginLeft="3dp"
                        android:text="Takeaway"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/productprice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="1dp"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

              <!--  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day :"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allday"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        />
                </LinearLayout>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date :"
                    android:textColor="@color/orange"
                    android:drawableLeft="@drawable/ic_clock_circular_outline"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/orange"
                    android:drawablePadding="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/coupon_button_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/add_cart_button"
                android:text="Get Coupon Code"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightcolour"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/simple_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/storelogothumb"
                                    android:layout_width="60dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:foregroundGravity="center"
                                    android:src="@drawable/logooffermachi" />
                                <TextView
                                    android:id="@+id/storename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                          <!--  <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">


                            </LinearLayout>-->

                            <TextView
                                android:id="@+id/btnfollow"
                                android:layout_width="70dp"
                                android:layout_height="19dp"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/view_background"
                                android:gravity="center"
                                android:text="Follow"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp">
                            <ImageView
                                android:id="@+id/storeimage"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/logooffermachi"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/storename2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="17dp"
                                    android:textColor="@color/blue"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/orange"/>
                            </LinearLayout>


                            <TextView
                                android:id="@+id/storedescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/viewalloffer_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/view_offer_background"
                            android:layout_marginTop="7dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="View All Offers"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="17dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>







<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="55dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/splash">
                        <ImageView
                            android:id="@+id/imageback"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_left_arrow"/>
                        <TextView
                            android:id="@+id/logo"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="My Profile"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:gravity="center"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="100dp">

                        <RelativeLayout
                            android:layout_below="@+id/cv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:id="@+id/editprofiletoprelative_id"
                            android:background="@drawable/profilebg">

                            <LinearLayout
                                android:id="@+id/edit_text_linear_id"
                                android:layout_width="88dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:background="@drawable/view_background">
                                <TextView
                                    android:id="@+id/edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    android:drawableLeft="@drawable/pencil"
                                    android:drawablePadding="10dp"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="30dp"
                                android:layout_centerHorizontal="true">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/imgProfileAvatar"
                                    android:src="@drawable/profile_user"
                                    android:foregroundGravity="center"
                                    />
                              <!--  <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/simple_circle_background">
                                    <ImageView
                                        android:id="@+id/imagepicker"
                                        android:layout_width="20dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/ic_photo_camera"/>
                                </LinearLayout>-->
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/edittext_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/viewrelative_id"
                                android:layout_marginVertical="40dp"
                               android:paddingBottom="100dp">

                                <EditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/edit_background"
                                    android:editable="false"
                                    android:hint="Name"
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple" />

                                <EditText
                                    android:id="@+id/gender"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/name"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:editable="false"
                                    android:background="@drawable/edit_background"
                                    android:hint="Gender"
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple" />

                                <EditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/gender"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/edit_background"
                                    android:hint="Email"
                                    android:editable="false"
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple"/>

                                <EditText
                                    android:id="@+id/mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/email"
                                    android:layout_marginVertical="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:editable="false"
                                    android:background="@drawable/edit_background"
                                    android:hint="Mobile Number "
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple"
                                    />
                                <TextView
                                    android:id="@+id/dob_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/mobile"
                                    android:layout_marginVertical="0dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:editable="false"
                                    android:background="@drawable/edit_background"
                                    android:hint="Dob "
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple"
                                    android:textSize="18dp"
                                    android:gravity="center_vertical"
                                    />

                                <EditText
                                    android:id="@+id/address"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/dob_id"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:editable="false"
                                    android:layout_marginVertical="20dp"
                                    android:background="@drawable/edit_background"
                                    android:hint="Address"
                                    android:paddingLeft="30dp"
                                    android:textColor="@color/purple"
                                    android:layout_marginBottom="100dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
</LinearLayout>